.card-main-block
  %h1.card-main-title
    支払い方法
  .card-main-block__info
    .credit_card-list
      .credit_card-list__frame
        .credit_card-list__title
          クレジットカード一覧
        .credit_card_info
          .credit_card_info__brand
            = image_tag @card_src, class: "credit_card_info__brand__img", size: '50x30', alt: @card_brand
          .credit_card_info__numbers
            .number
              = "**** **** **** " + @customer_card.last4
            .expiration_date
              .expiration_date__title
                有効期限
              .expiration_date__info
                = @exp_month + " / " + @exp_year
      .destroy__function
        .destroy__function__link
          = link_to "#" do
            削除する
    .payment-details
      = link_to "支払い方法について >", "", class: "payment-details__btn"